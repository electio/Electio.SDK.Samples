@using MPD.Electio.SDK.Sample.MvcApplication.Extensions
@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
        {
            <div class="alert alert-success">
                <span class="glyphicon glyphicon-ok-sign"></span>
                @ViewBag.Message
                @{
                    if (!string.IsNullOrWhiteSpace(ViewBag.RelativeLink))
                    {
                        string stringLink = ViewBag.RelativeLink.ToString();
                        var consignmentReference = stringLink.TryExtractConsignmentReference();
                        if (!string.IsNullOrWhiteSpace(stringLink.TryExtractConsignmentReference()))
                        {
                            <a href="/consignment/@consignmentReference">View consignment @consignmentReference</a>
                        }
                    }
                }
            </div>
        }
    </div>
</div>